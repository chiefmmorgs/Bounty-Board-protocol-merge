# ========================================
# Bounty Board SDK - Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# Base Sepolia RPC URL
RPC_URL=https://sepolia.base.org

# Chain ID (84532 for Base Sepolia)
CHAIN_ID=84532

# ========================================
# Contract Addresses (Base Sepolia - Jan 2026)
# ========================================
BOUNTY_REGISTRY_ADDRESS=0xE14BEe67a7AE250Cc99c30c50Da22ab5bF3d28d1
REPUTATION_ORACLE_ADDRESS=0x2AEedD485e66C5217B01AB2c259F2667BAB5e5f9
PAYMENT_ESCROW_ADDRESS=0x88C99c1329F4D7CF28bD5CE822Ac28a84fEff873
SUBMISSION_MANAGER_ADDRESS=0xcdF86241f34425ba9aC56b21F5240682b2A61bB6
DISPUTE_RESOLVER_ADDRESS=0x79f004B36A7c4A9d28d0fCa1C0193A2Ea477894E

# ========================================
# Ethos Network API
# ========================================
# Get your API key from https://ethos.network
ETHOS_API_KEY=GET /api/v2/profiles/stats HTTP/1.1
Host: api.ethos.network
Accept: */*

# ========================================
# Reputation Updater Service
# ========================================
# Private key of the account authorized to update reputations
# This account must be added as an authorized updater in ReputationOracle
SIGNER_PRIVATE_KEY=0x1b3efc0e3ed1171ea9fcde9bd20b8b1db6c68647da4af451d87e8ce24c36ce53

# Update interval in milliseconds (default: 1 hour)
UPDATE_INTERVAL_MS=3600000

# ========================================
# Optional: Subgraph
# ========================================
SUBGRAPH_URL=
